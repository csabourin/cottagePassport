modules = ["php-8.2", "web", "nodejs-20", "php-8.4"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.development]

[userenv.shared]
COTTAGE_AES_KEY = "dev-placeholder-aes-key"
COTTAGE_HMAC_SECRET = "dev-placeholder-hmac-secret"
COTTAGE_VALIDATION_EMAIL = "christian.sabourin@ncc-ccn.ca"
COTTAGE_ADMIN_KEY = "dev-admin-key"
COTTAGE_TOKEN_EXPIRY_DAYS = "7"

[workflows]
