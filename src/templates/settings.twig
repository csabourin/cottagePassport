{% extends "_layouts/cp" %}

{% set title = "Settings"|t('cottage-passport') %}
{% set selectedSubnavItem = 'settings' %}

{% set crumbs = [
    { label: settings.pluginName, url: url('cottage-passport') },
] %}

{% import "_includes/forms" as forms %}

{% block content %}
    <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('cottage-passport/cp/save-settings') }}
        {{ redirectInput('cottage-passport/settings') }}

        <h2>{{ "General"|t('cottage-passport') }}</h2>

        {{ forms.textField({
            first: true,
            label: "Plugin Name"|t('cottage-passport'),
            instructions: "Display name shown in the CP navigation."|t('cottage-passport'),
            name: 'pluginName',
            value: settings.pluginName,
            required: true,
        }) }}

        {{ forms.textField({
            label: "Route Prefix"|t('cottage-passport'),
            instructions: "URL prefix for the frontend page (e.g. \"passport\" â†’ /en/passport)."|t('cottage-passport'),
            name: 'routePrefix',
            value: settings.routePrefix,
            required: true,
        }) }}

        <hr>

        <h2>{{ "Geofence"|t('cottage-passport') }}</h2>

        {{ forms.lightswitchField({
            label: "Enable Geofence"|t('cottage-passport'),
            instructions: "When enabled, visitors must be within the configured radius of a location to check in."|t('cottage-passport'),
            name: 'enableGeofence',
            on: settings.enableGeofence,
        }) }}

        {{ forms.textField({
            label: "Geofence Radius (metres)"|t('cottage-passport'),
            name: 'geofenceRadius',
            value: settings.geofenceRadius,
            type: 'number',
            min: 50,
            max: 10000,
            size: 10,
        }) }}

        <hr>

        <h2>{{ "Prizes"|t('cottage-passport') }}</h2>

        {{ forms.textField({
            label: "Draw Threshold"|t('cottage-passport'),
            instructions: "Number of stamps required before the draw entry form appears."|t('cottage-passport'),
            name: 'drawThreshold',
            value: settings.drawThreshold,
            type: 'number',
            min: 1,
            size: 5,
        }) }}

        {{ forms.textField({
            label: "Max Stickers"|t('cottage-passport'),
            instructions: "Maximum number of sticker prizes available (0 = unlimited)."|t('cottage-passport'),
            name: 'maxStickers',
            value: settings.maxStickers,
            type: 'number',
            min: 0,
            size: 5,
        }) }}

        <hr>

        <h2>{{ "Freeform Integration"|t('cottage-passport') }}</h2>

        {{ forms.textField({
            label: "Draw Form Handle"|t('cottage-passport'),
            instructions: "Freeform form handle for the end-of-season draw entry."|t('cottage-passport'),
            name: 'freeformDrawFormHandle',
            value: settings.freeformDrawFormHandle,
            placeholder: 'passportDraw',
        }) }}

        {{ forms.textField({
            label: "Sticker Form Handle"|t('cottage-passport'),
            instructions: "Freeform form handle for the Memory Makers sticker request."|t('cottage-passport'),
            name: 'freeformStickerFormHandle',
            value: settings.freeformStickerFormHandle,
            placeholder: 'passportSticker',
        }) }}

        <hr>

        <h2>{{ "Analytics"|t('cottage-passport') }}</h2>

        {{ forms.textField({
            label: "GA4 Measurement ID"|t('cottage-passport'),
            instructions: "Google Analytics 4 measurement ID (e.g. G-XXXXXXXXXX). Leave blank to disable."|t('cottage-passport'),
            name: 'ga4MeasurementId',
            value: settings.ga4MeasurementId,
            placeholder: 'G-XXXXXXXXXX',
        }) }}

        <div class="buttons">
            <button type="submit" class="btn submit">{{ "Save"|t('app') }}</button>
        </div>
    </form>
{% endblock %}
