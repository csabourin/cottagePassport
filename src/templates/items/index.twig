{% extends "_layouts/cp" %}

{% set title = "Items"|t('cottage-passport') %}
{% set selectedSubnavItem = 'items' %}

{% set crumbs = [
    { label: settings.pluginName, url: url('cottage-passport') },
] %}

{% block actionButton %}
    <a class="btn submit" href="{{ url('cottage-passport/items/new') }}">{{ "New Item"|t('cottage-passport') }}</a>
{% endblock %}

{% block content %}
    {% if items|length %}
        <table id="passport-items" class="data fullwidth">
            <thead>
                <tr>
                    <th></th>
                    <th>{{ "Title"|t('cottage-passport') }}</th>
                    <th>{{ "Short Code"|t('cottage-passport') }}</th>
                    <th>{{ "Coordinates"|t('cottage-passport') }}</th>
                    <th>{{ "Enabled"|t('cottage-passport') }}</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    {% set content = item.contents[0] ?? null %}
                    <tr data-id="{{ item.id }}">
                        <td class="thin">
                            <a class="move icon" title="{{ 'Reorder'|t('app') }}" role="button"></a>
                        </td>
                        <td>
                            <a href="{{ url('cottage-passport/items/' ~ item.id) }}">
                                {{ content ? content.title : 'â€”' }}
                            </a>
                        </td>
                        <td><code>{{ item.shortCode }}</code></td>
                        <td>
                            {% if item.latitude and item.longitude %}
                                {{ item.latitude|number_format(4) }}, {{ item.longitude|number_format(4) }}
                            {% else %}
                                <span class="light">{{ "Not set"|t('cottage-passport') }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if item.enabled %}
                                <span class="status green"></span>
                            {% else %}
                                <span class="status"></span>
                            {% endif %}
                        </td>
                        <td class="thin">
                            <a class="delete icon" title="{{ 'Delete'|t('app') }}"
                               data-id="{{ item.id }}"
                               role="button"></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ "No items yet."|t('cottage-passport') }} <a href="{{ url('cottage-passport/items/new') }}">{{ "Create one"|t('cottage-passport') }}</a>.</p>
    {% endif %}
{% endblock %}

{% js %}
(function() {
    // Drag-and-drop reorder
    var table = document.getElementById('passport-items');
    if (table) {
        new Craft.AdminTable({
            tableSelector: '#passport-items',
            sortable: true,
            reorderAction: 'cottage-passport/cp/reorder',
            deleteAction: 'cottage-passport/cp/delete',
            confirmDeleteMessage: '{{ "Are you sure you want to delete this item?"|t("cottage-passport")|e("js") }}',
        });
    }
})();
{% endjs %}
